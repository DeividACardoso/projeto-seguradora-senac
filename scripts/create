create schema seguradora;
use seguradora;

CREATE TABLE TIPO_PESSOA (
  ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  TIPO_PESSOA VARCHAR(100)
);
CREATE TABLE ENDERECO (
  ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  NUMERO INT,
  CEP CHAR(8),
  RUA VARCHAR(100),
  BAIRRO VARCHAR(100),
  CIDADE VARCHAR(100),
  ESTADO CHAR(2)
);

CREATE TABLE PESSOA (
  ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  NOME VARCHAR(255),
  CPF CHAR(11),
  DTNASCIMENTO DATETIME,
  TELEFONE CHAR(11),
  ID_ENDERECO INT NOT NULL,
  ID_TIPO_PESSOA INT NOT NULL,
  FOREIGN KEY (ID_ENDERECO) REFERENCES ENDERECO(ID),
  FOREIGN KEY (ID_TIPO_PESSOA) REFERENCES TIPO_PESSOA(ID),
   UNIQUE INDEX (NOME)
);

CREATE TABLE SEGURO(
  ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  IDPESSOA INT,
  IDVEICULO INT,
  FOREIGN KEY (IDPESSOA) REFERENCES PESSOA(ID),
  FOREIGN KEY (IDVEICULO) REFERENCES VEICULO(ID),
  NUMERO_PROPOSTA VARCHAR(8),
  DT_INICIO_VIGENCIA DATETIME,
  DT_FIM_VIGENCIA DATETIME,
  RCF_DANOS_MATERIAIS DOUBLE,
  RCF_DANOS_CORPORAIS DOUBLE,
  FRANQUIA VARCHAR(50),
  ASSISTENCIA VARCHAR(100),
  CARRO_RESERVA VARCHAR(100)
);

CREATE TABLE VEICULO (
  ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  PLACA_VEICULO CHAR(8),
  MODELO VARCHAR(50),
  UNIQUE INDEX (PLACA_VEICULO)
);

CREATE TABLE SINISTRO (
  ID INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
  NUMERO_SINISTRO VARCHAR(10),
  TIPO_SINISTRO VARCHAR(50),
  ID_SEGURO INT,
  FOREIGN KEY (ID_SEGURO) REFERENCES SEGURO(ID),
  DT_SINISTRO DATETIME,
  VALOR_FRANQUIA DOUBLE,
  VALOR_ORCADO DOUBLE,
  VALOR_PAGO DOUBLE,
  SITUACAO VARCHAR(255),
  MOTIVO VARCHAR(255)
 
);
