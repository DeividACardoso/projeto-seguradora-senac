ALTER TABLE `seguradora`.`sinistro` 
DROP FOREIGN KEY `sinistro_ibfk_2`,
DROP FOREIGN KEY `sinistro_ibfk_1`;
ALTER TABLE `seguradora`.`sinistro` 
DROP COLUMN `PLACA_VEICULO`,
DROP COLUMN `SEGURADO`,
ADD COLUMN `IDPESSOA` INT NOT NULL AFTER `MOTIVO`,
ADD COLUMN `IDVEICULO` INT NULL AFTER `IDPESSOA`,
DROP INDEX `PLACA_VEICULO` ,
DROP INDEX `SEGURADO` ;
ALTER TABLE `seguradora`.`pessoa` 
;

ALTER TABLE `seguradora`.`veiculo` 
DROP FOREIGN KEY `veiculo_ibfk_1`;
ALTER TABLE `seguradora`.`veiculo` 
ADD CONSTRAINT `id_seguro`
  FOREIGN KEY (`ID_SEGURO`)
  REFERENCES `seguradora`.`seguro` (`ID`);


ALTER TABLE `seguradora`.`pessoa` 
CHANGE COLUMN `DTNASCIMENTO` `DTNASCIMENTO` DATE NULL DEFAULT NULL ;

ALTER TABLE `seguradora`.`sinistro` 
CHANGE COLUMN `VALOR_FRANQUIA` `VALOR_FRANQUIA` DOUBLE NULL DEFAULT NULL ,
CHANGE COLUMN `VALOR_ORCADO` `VALOR_ORCADO` DOUBLE NULL DEFAULT NULL ,
CHANGE COLUMN `VALOR_PAGO` `VALOR_PAGO` DOUBLE NULL DEFAULT NULL ;

ALTER TABLE `seguradora`.`sinistro` 
CHANGE COLUMN `SITUACAO` `SITUACAO` VARCHAR(255) NULL DEFAULT NULL ;
ALTER TABLE `seguradora`.`pessoa` 
CHANGE COLUMN `TELEFONE` `TELEFONE` CHAR(11) NULL DEFAULT NULL ;

